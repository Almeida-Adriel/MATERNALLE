datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuarios {
  id              String    @id @default(uuid())
  nome            String
  data_nascimento DateTime  @db.Date
  email           String    @unique
  passwordHash    String
  lastLoginAt      DateTime @db.Date
  recem_nascidos  Recem_nascidos[]
  notas           Notas[]
}

model Recem_nascidos {
  id              String    @id @default(uuid())
  id_usuario      String
  nome            String
  data_nascimento DateTime  @db.Date
  usuario         Usuarios  @relation(fields: [id_usuario], references: [id])

  @@index([id_usuario])
}

model Notas {
  id              String    @id @default(uuid())
  id_usuario      String
  titulo          String
  descricao       String
  data            DateTime  @db.Date
  usuario         Usuarios  @relation(fields: [id_usuario], references: [id])

  @@index([id_usuario])
}